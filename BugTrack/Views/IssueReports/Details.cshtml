@using BugTrack.ViewModels;
@using Microsoft.AspNetCore.Identity
@using BugTrack.Areas.Identity.Data
@model BugTrack.ViewModels.VMIssueReportEntities.IssueReportEntityWithIdViewModel;

@inject UserManager<BugUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@{
    ViewData["Title"] = "Details";
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
<h1>Details</h1>

<div>
    <h4>IssueReportEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueThreat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueThreat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GeneralDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplicationDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplicationDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFound)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFound)
        </dd>
    </dl>
</div>
<form asp-action="Details">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label class="control-label" for="commentBody">Comment</label>
                <input class="form-control" type="text" id="commentBody" name="commentBody" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
@foreach (var item in Model.Comments) {
    <div>
            @Html.DisplayFor(modelItem => item.OwnerName)
            <br />
            @Html.DisplayFor(modelItem => item.TimePosted)
            <br />
            @Html.DisplayFor(modelItem => item.Content)
    </div>
        <br />
}

@if (Model.BugUserId == user.Id)
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
    </div>
}
