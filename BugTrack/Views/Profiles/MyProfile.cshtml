@model BugTrack.ViewModels.VMProfiles.ProfileWithIFormFileViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Profile</h4>
    <hr />
    <form asp-controller="Profiles" asp-action="MyProfile" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
    <dl>
        <dt>
            <label asp-for="AvatarFile"></label>
        </dt>
        <dd>
            <input asp-for="AvatarFile" type="file" >
        </dd>
    </dl>
    <input class="btn" type="submit" value="Upload">
    </form>
    <img class="avatar_img" src="data:image/png;base64,@Model.AvatarEncoded" />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserJobTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserJobTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
